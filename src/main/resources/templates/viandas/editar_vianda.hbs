{{#partial "contenido"}}
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <h3>Formulario de viandas</h3>
            </div>
            <div>
                <form method="POST" action="/viandas/editar_vianda/{{vianda.id}}">
                    <input type="hidden" name="id" value="{{vianda.id}}">
                    <div class="row mb-3">
                        <div class="col">
                            <div class="form-group">
                                <input type="hidden" name="comida_id" value="{{vianda.comida.id}}">
                                <label for="comida">Comida</label>
                                <input type="text" class="form-control" id="comida" name="comida"
                                       value="{{vianda.comida.nombre}}" required>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="fecha_cad">Fecha de caducidad</label>
                                <input type="date" class="form-control" id="fecha_cad"
                                       name="fecha_cad"
                                       value="{{vianda.fechaCaducidad}}" required>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <div class="form-group mb-3">
                                <label for="heladera_id">Heladera</label>
                                <select class="form-select" aria-label="heladera"
                                        name="heladera_id"
                                        required>
                                    <option value="" disabled>Seleccione una heladera</option>
                                    {{#each heladeras}}
                                        <option value="{{this.id}}">
                                            {{this.puntoGeografico.direccion.calle.nombre}} {{this.puntoGeografico.direccion.altura}}
                                            ,
                                            {{this.puntoGeografico.direccion.codigoPostal}}
                                            , {{this.puntoGeografico.direccion.ciudad.nombre}}
                                        </option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="calorias">Calorias</label>
                                <input type="number" class="form-control" id="calorias"
                                       name="calorias"
                                       value="{{vianda.calorias}}" required>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="Peso">Peso</label>
                                <input type="number" class="form-control" id="Peso" name="peso"
                                       value="{{vianda.peso}}"
                                       required>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <div class="form-group">
                                <label for="Fecha de donacion">Fecha de donacion</label>
                                <input type="date" class="form-control" id="Fecha de donacion"
                                       name="fecha_don"
                                       value="{{vianda.fechaDonacion}}" required>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch"
                                   id="entregado"
                                   name="entregado" value="{{vianda.estadoVianda}}" checked>
                            <label class="form-check-label" for="entregado">Entregado</label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Cargar</button>
                </form>
            </div>
        </div>

    </div>
{{/partial}}
{{> templates/base}}