{{#partial "contenido"}}
    <div class="container">
        <h2 class="mb-4">Perfil del Tecnico</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <img src="https://via.placeholder.com/150" alt="Foto del Tecnico"
                             class="rounded-circle img-fluid mb-3">
                        <h3 class="card-title">{{tecnico.nombre}} {{tecnico.apellido}}</h3>
                        <p class="card-text text-muted">Voluntario Activo</p>
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary" type="button">Editar Perfil</button>
                            <button class="btn btn-outline-secondary" type="button">Cambiar
                                Contraseña
                            </button>
                            <a class="btn btn-outline-danger" type="button" href="/logout">Cerrar
                                Sesión</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <h4 class="card-title">Información Personal</h4>
                        <div class="row">
                            <div class="col-sm-6">
                                <p><strong>ID:</strong> {{tecnico.id}}</p>
                                <p class="card-text"><strong>Contacto:</strong>
                                    {{tecnico.medioDeContacto.contacto}}
                                </p>
                            </div>
                            <div class="col-sm-6">
                                <p><strong>Fecha de Inicio:</strong> {{tecnico.fechaAlta}}</p>
                                <p><strong>Tipo persona:</strong> Tecnico </p>
                                <p><strong>Estado:</strong>
                                    {{#if tecnico.activo}}
                                        <span class="badge bg-success">
                                        Activo
                                        </span>
                                    {{else }}
                                        <span class="badge bg-danger">
                                            Inactivo
                                        </span>
                                    {{/if}}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{{/partial}}
{{> templates/base}}