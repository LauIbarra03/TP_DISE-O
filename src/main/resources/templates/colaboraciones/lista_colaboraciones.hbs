{{#partial "contenido"}}
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <h3>Colaboraciones</h3>
                <div>
                    <a href="/colaboraciones/formulario/" class="btn btn-primary">Agregar
                        Colaboración </a>
                </div>
            </div>
            <table class="table table-striped">
                <thead>
                <th>ID</th>
                <th>Tipo de colaboración</th>
                <th>Fecha</th>
                </thead>
                <tbody>
                {{#each contribuciones}}
                    <tr onclick="window.location.href='/colaboraciones/detalle_colaboracion/{{this.id}}'"
                        style="cursor: pointer;">
                        <th>{{this.id}}</th>
                        <th> {{this.tipo}} </th>
                        <th> {{this.fechaAlta}}</th>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>



{{/partial}}
{{> templates/base}}